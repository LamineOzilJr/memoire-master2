# Leave Workflow Management System - Environment Configuration
# Copy this file to .env and update values for your environment
# NOTE: DO NOT commit .env to Git (it's in .gitignore)

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DB_ROOT_PASSWORD=
DB_NAME=leaveworkflow_db
DB_USER=root
DB_PASSWORD=

# ============================================================
# JWT & SECURITY CONFIGURATION
# ============================================================
# Generate a new secret key for production:
# - Linux/Mac: openssl rand -base64 64
# - PowerShell: [System.Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(48))
JWT_SECRET=5f8a9b7c6d4e3f2a1b0c9d8e7f6a5b4c3d2e1f0a9b8c7d6e5f4a3b2c1d0e9f8a7b6c5d4e3f2a1b0c9d8e7f6a5b4c
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================
# API Base URL - used during frontend build
API_BASE_URL=http://localhost:8080/api

# ============================================================
# SERVICE PORTS
# ============================================================
FRONTEND_PORT=4200
BACKEND_PORT=8080
DB_PORT=3307

# ============================================================
# LOGGING & DEBUGGING
# ============================================================
# Options: DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL=INFO

# ============================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_FROM=noreply@yourcompany.com

# ============================================================
# FILE UPLOAD CONFIGURATION
# ============================================================
FILE_MAX_SIZE=104857600
FILE_ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# ============================================================
# LEAVE RULES (Senegal-specific)
# ============================================================
LEAVE_ANNUAL_DAYS=24
LEAVE_MONTHLY_ACCRUAL=2.5
LEAVE_MAX_CARRYOVER=10

